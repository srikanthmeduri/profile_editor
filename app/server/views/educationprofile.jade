                        input.input-small.attendedstartdate(type='text', name='attendedstartdate')
                .span6
                    .control-group
                        label.control-label Attended To:                 
                        input.input-small.attendedenddate(type='text', name='attendedenddate')
            .row-fluid
                .control-group
                    label.control-label Graduated:                 
                    input.graduated(type='checkbox', name='graduated', value='false')
    
    h3
        span.certificationtitle Professional Certifications
        a.addcertification + Add More
        .clear-fix
    .certificationarray
        h6
            span.arrow ▼
            span Professional Certifications#
        .certification
            .row-fluid
                .control-group
                    label.control-label Organization Name:                            
                    input.professionalorganizationname(type='text', name='professionalorganizationname')
            .row-fluid
                .control-group
                    label.control-label Certification Name:                 
                    input.certificationname(type='text', name='certificationname')
            .row-fluid
                .control-group
                    label.control-label(for='completed') Completed:                 
                    input.completed(type='checkbox', name='completed', value='false')
            .row-fluid
                .control-group
                    label.control-label2(for='validtill') Valid Till:                 
                    input.validtill(type='text', name='validtill')

